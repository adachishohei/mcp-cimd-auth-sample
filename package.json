{
  "name": "authenticated-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server with OAuth 2.1 authentication using Client ID Metadata Documents",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "vitest --run",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "synth": "cdk synth",
    "diff": "cdk diff",
    "destroy": "cdk destroy",
    "bootstrap": "cdk bootstrap",
    "deploy:ci": "npm run build && cdk deploy --require-approval never",
    "outputs": "aws cloudformation describe-stacks --stack-name AuthenticatedMcpStack --query 'Stacks[0].Outputs' --output table"
  },
  "keywords": [
    "mcp",
    "oauth",
    "cognito",
    "aws"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^20.11.0",
    "aws-cdk": "^2.133.0",
    "esbuild": "^0.19.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.515.0",
    "@aws-sdk/lib-dynamodb": "^3.515.0",
    "aws-cdk-lib": "^2.133.0",
    "constructs": "^10.3.0",
    "jose": "^5.2.0",
    "source-map-support": "^0.5.21"
  }
}
